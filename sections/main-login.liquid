<section class="auth">
	<div class="auth__wrapper">
		<div class="auth__content">
			<h2 class="auth__title">{{ 'customer.log_in' | t }}</h2>
			{%- form 'customer_login', novalidate: 'novalidate', class: 'auth__form' -%}
				<div class="auth__line">
					<label for="email">{{ 'customer.login_page.email' | t }}</label>
					<input
						type="email"
						name="customer[email]"
						id="CustomerEmail"
						autocomplete="email"
						autocorrect="off"
						autocapitalize="off"
						placeholder="exemple@gmail.com" />
				</div>
				<div class="auth__line">
					<label for="password">{{ 'customer.login_page.password' | t }}</label>
					<input
						type="password"
						value=""
						name="customer[password]"
						id="CustomerPassword"
						autocomplete="current-password"
						placeholder="Enter password" />
					<span class="auth__eye">
						{% render 'eye' %}
					</span>
					<div class="auth__info">
						<div class="auth__checkbox">
							<input type="checkbox" name="remember" id="remember" />
							<label for="remember">{{ 'customer.login_page.remember_me' | t }}</label>
						</div>
						<a href="#" class="auth__forgot">{{ 'customer.login_page.forgot_password' | t }}</a>
					</div>
				</div>
				<button type="submit" class="button button--primary">{{ 'customer.login_page.submit' | t }}</button>
			{%- endform -%}
			<div class="auth__link">
				<span>{{ 'customer.login_page.create_account' | t }}</span><a href="#">{{ 'customer.login_page.register' | t }}</a>
			</div>
		</div>
		<div class="auth__image">
			 {% if section.settings.image %}
				<img src="{{ section.settings.image | image_url }}" alt="Auth" loading="lazy" />
			{% endif %}
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Auth Section",
  "tag": "section",
  "class": "section-auth",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Auth section"
    }
  ]
}
{% endschema %}